	<filter>
		<filter-name>Filtro de Acesso ao sistema</filter-name>
		<filter-class>br.org.ovelha.acesso.FiltroAcesso</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Filtro de Acesso ao sistema</filter-name>
		<url-pattern>/pages/private/*</url-pattern>
	</filter-mapping> 	


	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<display-name>Restrict raw XHTML Documents</display-name>
		<web-resource-collection>
			<web-resource-name>XHTML</web-resource-name>
			<url-pattern>*.xhtml</url-pattern>
		</web-resource-collection>
		<auth-constraint />
	</security-constraint>
	
		<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/pages/public/login.jsf</form-login-page>
			<form-error-page>/pages/public/login.jsf</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>*</role-name>
	</security-role>
	
	<error-page>
	    <exception-type>
	        javax.faces.application.ViewExpiredException
	    </exception-type>
	    <location>
	        /pages/public/login.jsf
	    </location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/pages/public/logout.jsf</location>
	</error-page>  

</web-app>
